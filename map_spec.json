{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "projection": {"type": "naturalEarth1", 
  "scale": {"expr": "zoom_level"},
  "center": {"expr": "[left_right, top_bottom]"}
},
  "layer": [
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cdcccc",
        "stroke": "#F5F7F8"
      }
    },
    {
      "data":{
        "url": "ne_110m_ocean.json",
        "format":{"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#E8ECF1",
        "stroke": "#E8ECF1"
      }
    },
    {
      "data":{
        "url": "ne_50m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
      },
      "mark":{
        "type": "image",
        "stroke":"whitesmoke"
      }
    },
    {
      "data": {
        "url": "DataProcessing/cleaned_population.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "datum.year == year"
        },
        {
          "aggregate": [
            {
              "op": "sum", 
              "field": "refugees_under_unhcr_mandate",
              "as": "refugees_under_unhcr_mandate_sum"
            },
            {
              "op": "sum",
              "field": "asylum_seekers",
              "as": "asylum_seekers_sum"
            }
          ],
          "groupby": ["country_of_origin", "longitude_origin", "latitude_origin", "year"] 
        },
        {
          "calculate": "datum.refugees_under_unhcr_mandate_sum + datum.asylum_seekers_sum",
          "as": "total_refugees" 
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "wheat",
        "strokeWidth": 0.2
      },
      "encoding": {
        "longitude": {"field": "longitude_origin"},
        "latitude": {"field": "latitude_origin"},
        "size": {
          "field": "total_refugees",
          "type": "quantitative",
          "scale": {
            "range": [50, 190, 470, 1310, 3430]
          },
          "title": "Population Density"
        },
        "color": {
          "field": "total_refugees",
          "type": "quantitative",
          "scale": {
            "domain": [20, 200, 2000, 20000, 200000],
            "range": ["#E0A500", "#E08A02", "#E06602", "#E06602", "#E01902"]
          },
          "legend": {
            "title": "Total Number of Refugees",
            "orient": "bottom",
            "direction": "horizontal",
            "gradientLength": 300,
            "titleFontSize":13,
            "labelFontSize": 10,
            "symbolSize":11
          }
        },
        "tooltip": [
          {"field": "year", "title": "Year"},
          {"field": "country_of_origin", "title": "Country"},
          {"field": "total_refugees", "title": "Total Refugees"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "year",
      "value": 2011,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 210,
      "bind": {
      "input": "range",
      "min": 150,
      "max": 1000,
      "step": 100,
      "name": "Zoom: "
      }
    },
    {
      "name": "left_right",
      "value": 0,
      "bind":{
        "input": "range",
        "min": -180,
        "max": 180,
        "step": 1,
        "name": "Left Right"
      }
    },
    {
      "name": "top_bottom",
      "value": 0,
      "bind":{
        "input": "range",
        "min": -90,
        "max": 90,
        "step": 1,
        "name": "Bottom Top"
      }
    }        
  ]
}
